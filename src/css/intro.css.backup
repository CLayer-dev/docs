/* ========================================
image.png   CIRCLE LAYER INTRO PAGE - SIMPLIFIED & LIGHTWEIGHT
   ======================================== */

/* Essential Variables Only */
:root {
    --primary-blue: #1a73e8;
    --primary-teal: #18b6a4;
    --border-radius: 12px;
    --shadow-light: 0 4px 12px rgba(0, 0, 0, 0.1);
    --shadow-medium: 0 8px 24px rgba(0, 0, 0, 0.15);
}

/* Simple Welcome Banner */
.hero-gradient {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
    padding: 3rem 2rem;
    text-align: center;
    color: white;
    margin: -2rem -2rem 2rem -2rem;
    border-radius: 0 0 var(--border-radius) var(--border-radius);
    box-shadow: var(--shadow-medium);
}

/* Logo Styling */
.hero-logo-glow {
    margin-bottom: 2rem;
}

.main-logo {
    max-width: 200px;
    height: auto;
    border-radius: var(--border-radius);
}

/* Typography */
.hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 1.5rem 0 1rem 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.hero-description {
    font-size: 1.2rem;
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto 2rem auto;
    line-height: 1.6;
}

/* CTA Buttons */
.hero-cta-container {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2rem 0;
}

.hero-cta-primary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
}

.hero-cta-primary:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    color: white;
}

.hero-cta-secondary {
    background: transparent;
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
}

.hero-cta-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
}

/* Hero Stats */
.hero-stats {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin-top: 2rem;
    flex-wrap: wrap;
}

.hero-stat {
    text-align: center;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 255, 255, 0.2);
    min-width: 120px;
}

.hero-stat-value {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    display: block;
}

.hero-stat-label {
    font-size: 0.9rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Simple Scroll Indicator */
.scroll-indicator {
    margin-top: 2rem;
}

.scroll-arrow {
    width: 24px;
    height: 24px;
    border: 2px solid white;
    border-top: none;
    border-left: none;
    transform: rotate(45deg);
    opacity: 0.7;
    margin: 0 auto;
}

/* Section Headers */
h2 {
    font-size: 2rem !important;
    font-weight: 700 !important;
    margin: 3rem 0 2rem 0 !important;
    text-align: center;
    color: var(--ifm-color-primary);
}

h3 {
    font-size: 1.5rem !important;
    font-weight: 600 !important;
    margin: 2rem 0 1rem 0 !important;
    color: var(--ifm-color-primary);
}

/* Metrics Dashboard */
.metrics-dashboard {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--ifm-color-secondary-lightest);
    border-radius: var(--border-radius);
    border: 1px solid var(--ifm-color-emphasis-200);
}

.metric-card {
    background: var(--ifm-background-color);
    border: 1px solid var(--ifm-color-emphasis-200);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    text-align: center;
    transition: transform 0.3s ease;
}

.metric-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-light);
}

.metric-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--ifm-color-primary);
    margin-bottom: 0.5rem;
    display: block;
}

.metric-label {
    font-size: 0.9rem;
    color: var(--ifm-color-emphasis-700);
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
}

.metric-trend {
    font-size: 0.8rem;
    color: var(--ifm-color-success);
    font-weight: 600;
    padding: 0.3rem 0.6rem;
    background: var(--ifm-color-success-lightest);
    border-radius: 8px;
    display: inline-block;
}

/* Features Grid */
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
}

.feature-card {
    background: var(--ifm-background-color);
    border: 1px solid var(--ifm-color-emphasis-200);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    transition: transform 0.3s ease;
    box-shadow: var(--shadow-light);
}

.feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
}

.feature-card.highlight {
    border: 2px solid var(--ifm-color-primary);
    background: linear-gradient(135deg, var(--ifm-background-color) 0%, var(--ifm-color-primary-lightest) 100%);
}

.feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
}

.feature-card h3 {
    color: var(--ifm-color-primary) !important;
    margin-bottom: 1rem !important;
    text-align: left !important;
    font-size: 1.3rem !important;
}

.feature-card p {
    color: var(--ifm-color-emphasis-700);
    line-height: 1.6;
    margin-bottom: 1rem;
}

/* Progress Bars */
.feature-progress {
    margin-top: 1rem;
}

.progress-bar {
    width: 100%;
    height: 8px;
    background: var(--ifm-color-emphasis-200);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 0.5rem;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--ifm-color-primary) 0%, var(--ifm-color-success) 100%);
    border-radius: 4px;
    transition: width 1s ease;
}

/* Security Badges */
.security-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
}

.badge {
    display: inline-block;
    background: var(--ifm-color-primary-lightest);
    color: var(--ifm-color-primary-darkest);
    padding: 0.3rem 0.6rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

/* Compatibility Chart */
.compatibility-chart {
    margin-top: 1rem;
}

.compat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
}

.compat-item span {
    font-weight: 600;
    color: var(--ifm-color-emphasis-700);
    min-width: 60px;
}

.compat-bar {
    flex: 1;
    height: 6px;
    background: var(--ifm-color-emphasis-200);
    border-radius: 3px;
    margin-left: 1rem;
    overflow: hidden;
}

.compat-bar div {
    height: 100%;
    background: var(--ifm-color-success);
    border-radius: 3px;
    width: 100%;
}

/* Energy Comparison */
.energy-comparison {
    margin-top: 1rem;
}

.energy-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.6rem;
    background: var(--ifm-color-secondary-lightest);
    border-radius: 6px;
    margin-bottom: 0.5rem;
}

.energy-bar.ethereum {
    border-left: 4px solid #ef4444;
}

.energy-bar.circle {
    border-left: 4px solid var(--ifm-color-success);
}

.energy-bar span:first-child {
    font-weight: 600;
    min-width: 100px;
}

.energy-bar .bar {
    flex: 1;
    height: 6px;
    background: var(--ifm-color-emphasis-200);
    border-radius: 3px;
    margin: 0 1rem;
    overflow: hidden;
}

.energy-bar.ethereum .bar div {
    background: #ef4444;
    width: 100%;
}

.energy-bar.circle .bar div {
    background: var(--ifm-color-success);
    width: 1%;
}

/* Clean Performance Metrics Section */
.performance-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
    padding: 2rem;
    background: var(--ifm-color-secondary-lightest);
    border-radius: var(--border-radius);
    border: 1px solid var(--ifm-color-emphasis-200);
}

.performance-card {
    background: var(--ifm-background-color);
    border: 1px solid var(--ifm-color-emphasis-200);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    text-align: center;
    transition: transform 0.3s ease;
    box-shadow: var(--shadow-light);
}

.performance-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
    border-color: var(--primary-blue);
}

.performance-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-blue);
    margin-bottom: 0.5rem;
    display: block;
}

.performance-label {
    font-size: 0.9rem;
    color: var(--ifm-color-emphasis-700);
    font-weight: 600;
    text-transform: uppercase;
}

/* Clean Table Styling - Simple & Effective */
table {
    margin: 2rem 0 !important;
    border-radius: var(--border-radius) !important;
    overflow: hidden !important;
    box-shadow: var(--shadow-light) !important;
    border: none !important;
    width: 100% !important;
    border-collapse: separate !important;
    border-spacing: 0 !important;
    table-layout: fixed !important;
}

table thead {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-teal) 100%) !important;
}

table th {
    background: transparent !important;
    color: white !important;
    font-weight: 700 !important;
    padding: 1rem !important;
    border: none !important;
    vertical-align: middle !important;
    text-align: center !important;
    width: 25% !important;
}

table th:first-child {
    text-align: left !important;
    padding-left: 1.5rem !important;
}

table td {
    padding: 1rem !important;
    border: none !important;
    border-bottom: 1px solid var(--ifm-color-emphasis-200) !important;
    font-weight: 500 !important;
    vertical-align: middle !important;
    text-align: center !important;
    width: 25% !important;
}

table td:first-child {
    text-align: left !important;
    font-weight: 600 !important;
    padding-left: 1.5rem !important;
}

table tbody tr:nth-child(odd) {
    background: var(--ifm-color-secondary-lightest) !important;
}

table tbody tr:hover {
    background: var(--ifm-color-primary-lightest) !important;
}

/* Circle Layer rows */
table tbody tr:first-child,
table tbody tr:nth-child(2) {
    background: var(--ifm-color-success-lightest) !important;
    border-left: 4px solid var(--ifm-color-success) !important;
    font-weight: 600 !important;
}

table tbody tr:first-child td:first-child,
table tbody tr:nth-child(2) td:first-child {
    font-weight: 700 !important;
    padding-left: calc(1.5rem - 4px) !important;
}

/* ENHANCED ROADMAP SECTION - COMPLETE REDESIGN */
.roadmap-container {
    margin: 3rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 20px;
    padding: 3rem;
    position: relative;
    box-shadow: 0 10px 40px rgba(26, 115, 232, 0.1);
    border: 2px solid var(--primary-blue);
    overflow: hidden;
}

.roadmap-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
}

.roadmap-container::after {
    content: '🎯';
    position: absolute;
    top: -20px;
    right: 3rem;
    background: white;
    padding: 1rem;
    font-size: 2rem;
    border-radius: 50%;
    border: 3px solid var(--primary-blue);
    box-shadow: 0 4px 15px rgba(26, 115, 232, 0.2);
}

.roadmap-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
}

.roadmap-main-title {
    font-size: 2rem !important;
    font-weight: 800 !important;
    color: var(--primary-blue) !important;
    margin: 0 0 1rem 0 !important;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.roadmap-subtitle {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--ifm-color-emphasis-700);
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.1), rgba(24, 182, 164, 0.1));
    padding: 0.8rem 2rem;
    border-radius: 25px;
    display: inline-block;
    border: 1px solid rgba(26, 115, 232, 0.2);
}

.roadmap-section {
    background: rgba(255, 255, 255, 0.8);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(10px);
}

.roadmap-content {
    position: relative;
}

.roadmap-title {
    text-align: center;
    margin-bottom: 2.5rem;
    font-size: 1.6rem;
    font-weight: 800;
    color: var(--primary-blue);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    position: relative;
}

.roadmap-title::after {
    content: '';
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
    border-radius: 2px;
}

.title-icon {
    font-size: 2rem;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-teal));
    padding: 0.5rem;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(26, 115, 232, 0.3);
}

.achievement-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 3rem 0;
}

.achievement-item {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
}

.achievement-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.achievement-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(26, 115, 232, 0.15);
    border-color: var(--primary-blue);
}

.achievement-item:hover::before {
    transform: scaleX(1);
}

.achievement-icon {
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-teal));
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    box-shadow: 0 6px 20px rgba(26, 115, 232, 0.3);
    flex-shrink: 0;
    transition: all 0.3s ease;
}

.achievement-item:hover .achievement-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 25px rgba(26, 115, 232, 0.4);
}

.achievement-content {
    flex: 1;
}

.achievement-content h4 {
    margin: 0 0 0.8rem 0 !important;
    font-size: 1.3rem !important;
    font-weight: 700 !important;
    color: var(--primary-blue) !important;
    line-height: 1.3 !important;
}

.achievement-content p {
    margin: 0;
    color: var(--ifm-color-emphasis-600);
    font-size: 1rem;
    line-height: 1.5;
    opacity: 0.9;
}

.status-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: linear-gradient(135deg, var(--primary-blue), var(--primary-teal));
    color: white;
    padding: 1.5rem 3rem;
    border-radius: 50px;
    font-weight: 600;
    margin-top: 3rem;
    box-shadow: 0 8px 25px rgba(26, 115, 232, 0.3);
    font-size: 1.1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 2px solid rgba(255, 255, 255, 0.2);
}

.status-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.8s ease;
}

.status-badge:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 35px rgba(26, 115, 232, 0.4);
}

.status-badge:hover::before {
    left: 100%;
}

.status-icon {
    font-size: 1.4rem;
    animation: pulse 2s infinite;
}

.status-text {
    font-weight: 600;
    letter-spacing: 0.02em;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }
}

/* Quick Start Grid - RESTORED */
.quick-start-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
}

.quick-start-card {
    background: var(--ifm-background-color);
    border: 1px solid var(--ifm-color-emphasis-200);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    transition: transform 0.3s ease;
    box-shadow: var(--shadow-light);
}

.quick-start-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.card-header h3 {
    margin: 0 !important;
    color: var(--ifm-color-primary) !important;
    font-size: 1.2rem !important;
    text-align: left !important;
}

.difficulty {
    padding: 0.3rem 0.6rem;
    border-radius: 8px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
}

.difficulty.easy {
    background: #dcfce7;
    color: #15803d;
}

.difficulty.medium {
    background: #fef3c7;
    color: #d97706;
}

.difficulty.beginner {
    background: #ede9fe;
    color: #7c3aed;
}

/* Button Styling - RESTORED */
.button {
    padding: 0.6rem 1.2rem !important;
    border-radius: 6px !important;
    font-weight: 600 !important;
    transition: all 0.3s ease !important;
    text-decoration: none !important;
    display: inline-block !important;
    margin-top: 1rem !important;
}

.button--primary {
    background: var(--ifm-color-primary) !important;
    color: white !important;
    border: none !important;
}

.button--primary:hover {
    background: var(--ifm-color-primary-dark) !important;
    color: white !important;
}

.button--secondary {
    background: transparent !important;
    color: var(--ifm-color-primary) !important;
    border: 2px solid var(--ifm-color-primary) !important;
}

.button--secondary:hover {
    background: var(--ifm-color-primary) !important;
    color: white !important;
}

/* Ecosystem Stats - RESTORED */
.ecosystem-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--ifm-color-secondary-lightest);
    border-radius: var(--border-radius);
}

.stat-item {
    text-align: center;
    padding: 1rem;
    background: var(--ifm-background-color);
    border-radius: var(--border-radius);
    transition: transform 0.3s ease;
}

.stat-item:hover {
    transform: scale(1.05);
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--ifm-color-primary);
    margin-bottom: 0.5rem;
    display: block;
}

.stat-label {
    font-size: 0.9rem;
    color: var(--ifm-color-emphasis-600);
    font-weight: 600;
    text-transform: uppercase;
}

/* Architecture Section - RESTORED */
.architecture-section {
    margin: 2rem 0;
    padding: 2rem;
    background: var(--ifm-color-emphasis-50);
    border-radius: var(--border-radius);
    border: 1px solid var(--ifm-color-emphasis-200);
}

/* Footer CTA - RESTORED */
.intro-footer-cta {
    text-align: center;
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--ifm-color-primary-lightest);
    border-radius: var(--border-radius);
    border: 1px solid var(--ifm-color-emphasis-200);
}

.intro-footer-cta p {
    font-size: 1.1rem !important;
    font-weight: 500 !important;
    color: var(--ifm-color-emphasis-700) !important;
    margin: 0 !important;
}

/* Responsive */
@media (max-width: 768px) {
    table {
        font-size: 0.9rem !important;
    }

    table th,
    table td {
        padding: 0.8rem 0.5rem !important;
    }

    table th:first-child,
    table td:first-child {
        padding-left: 1rem !important;
    }

    table tbody tr:nth-child(2) td:first-child {
        padding-left: calc(1rem - 4px) !important;
    }

    .roadmap-container {
        padding: 2rem 1.5rem;
        margin: 2rem 0;
    }

    .roadmap-container::after {
        top: -15px;
        right: 1.5rem;
        padding: 0.8rem;
        font-size: 1.5rem;
    }

    .roadmap-section {
        padding: 1.5rem;
    }

    .roadmap-main-title {
        font-size: 1.6rem !important;
    }

    .roadmap-title {
        font-size: 1.3rem;
        flex-direction: column;
        gap: 0.5rem;
    }

    .achievement-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
        margin: 2rem 0;
    }

    .achievement-item {
        padding: 1.5rem;
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .achievement-icon {
        width: 50px;
        height: 50px;
        font-size: 1.5rem;
        align-self: center;
    }

    .status-badge {
        padding: 1.2rem 2rem;
        font-size: 1rem;
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
    }
}

/* What's Next Section - Enhanced Design */
.next-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
    padding: 2rem 0;
}

.step-card {
    background: var(--ifm-background-color);
    border: 1px solid var(--ifm-color-emphasis-200);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
}

.step-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
    border-radius: 16px 16px 0 0;
}

.step-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(26, 115, 232, 0.15);
    border-color: var(--primary-blue);
}

.step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
    color: white;
    border-radius: 50%;
    font-weight: 700;
    font-size: 1.1rem;
    margin: 0 auto 1.5rem auto;
    box-shadow: 0 4px 15px rgba(26, 115, 232, 0.3);
    transition: all 0.3s ease;
}

.step-card:hover .step-number {
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(26, 115, 232, 0.4);
}

.step-card h4 {
    margin: 1.5rem 0 1rem 0 !important;
    color: var(--ifm-color-primary) !important;
    font-size: 1.4rem !important;
    font-weight: 700 !important;
    border: none !important;
    padding: 0 !important;
    line-height: 1.3 !important;
}

.step-card p {
    color: var(--ifm-color-emphasis-600);
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 2rem;
    opacity: 0.9;
}

.step-card a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-teal) 100%);
    font-weight: 600;
    text-decoration: none;
    padding: 0.8rem 1.8rem;
    border: none;
    border-radius: 25px;
    transition: all 0.3s ease;
    font-size: 0.95rem;
    box-shadow: 0 4px 15px rgba(26, 115, 232, 0.3);
    position: relative;
    overflow: hidden;
}

.step-card a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
}

.step-card a:hover::before {
    left: 100%;
}

.step-card a:hover {
    background: linear-gradient(135deg, var(--primary-teal) 0%, var(--primary-blue) 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(26, 115, 232, 0.4);
    color: white;
}

/* Dark Theme Support */
[data-theme="dark"] .hero-gradient {
    background: linear-gradient(135deg, #1557c7 0%, #16a085 100%);
}

[data-theme="dark"] .metrics-dashboard {
    background: var(--ifm-color-emphasis-200);
}

[data-theme="dark"] .performance-metrics {
    background: var(--ifm-color-emphasis-100);
}

[data-theme="dark"] .roadmap-section {
    background: linear-gradient(135deg, var(--ifm-color-emphasis-100) 0%, var(--ifm-color-emphasis-200) 100%);
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-gradient {
        padding: 2rem 1rem;
        margin: -1rem -1rem 1rem -1rem;
    }

    .hero-title {
        font-size: 2rem;
    }

    .hero-description {
        font-size: 1.1rem;
    }

    .main-logo {
        max-width: 150px;
    }

    .hero-cta-container {
        flex-direction: column;
        align-items: center;
    }

    .hero-cta-primary,
    .hero-cta-secondary {
        width: 100%;
        max-width: 250px;
    }

    .hero-stats {
        gap: 1rem;
    }

    .metrics-dashboard,
    .performance-metrics,
    .features-grid,
    .next-steps {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    h2 {
        font-size: 1.6rem !important;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 1.8rem;
    }

    .hero-description {
        font-size: 1rem;
    }

    .main-logo {
        max-width: 120px;
    }

    .hero-stats {
        flex-direction: column;
        align-items: center;
    }

    .hero-stat {
        width: 100%;
        max-width: 200px;
    }
}